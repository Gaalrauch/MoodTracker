<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.ChartActivity">

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/piechart"
        android:layout_width="325dp"
        android:layout_height="450dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.github.mikephil.charting.charts.PieChart>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginBottom="8dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="5"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/faded_red"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivSmiley1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="Sad"
                app:srcCompat="@drawable/smiley_sad" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/warm_grey"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivSmiley2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:contentDescription="Disappointed"
                app:srcCompat="@drawable/smiley_disappointed" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/cornflower_blue_65"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivSmiley3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="Normal"
                app:srcCompat="@drawable/smiley_normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/light_sage"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivSmiley4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="Happy"
                app:srcCompat="@drawable/smiley_happy" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/banana_yellow"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivSmiley5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="SuperHappy"
                app:srcCompat="@drawable/smiley_super_happy" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>